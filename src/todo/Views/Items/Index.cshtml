@model IEnumerable<ToDoList.Models.Item>

@{ 
    ViewData["Title"] = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>To Do List</h2>
<hr>
<table class="table">
    <tr>
        <th>
          @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>
   
        @foreach (var listItem in Model)
        {
            <tr>
                <td>

                @Html.DisplayFor(modelItem => listItem.Description) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => listItem.Category.Name)
                </td>

                <td>
                    @Html.ActionLink("Frogs", "Details", new { id = listItem.ItemId }) | @Html.ActionLink("Edit", "Edit", new { id = listItem.ItemId }) | @Html.ActionLink("Delete", "Delete", new { id = listItem.ItemId })
                    
                @if (listItem.Done)
                {
                    <span>This task is complete</span>
                }
                else
                {
                    <span>This task is not complete</span>
                }
                </td>
            </tr>
        }
 
</table>

<p>@Html.ActionLink("Add new item", "Create")</p>
